div(class="gallery-container")
    each file, index in files
        div(class='gallery-img')
            img(src="/img/live/"+file alt="placeholder" data-toggle="modal" data-target="#"+file)

<!-- Modal -->
each file, index in files
    div(class="modal fade" id=file tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog" role="document")
            div(class="modal-content")
                div(class="modal-body")
                    img(src="/img/live/"+file alt="placeholder" class="gallery-modal-img")