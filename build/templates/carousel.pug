- var imgDir = (page === "testHome")? "test" : "live"
- var galleryLink = (page === "testHome")? "/testGallery9134" : "/gallery"
div(id="img-carousel" class="carousel slide" data-ride="carousel")    
    ol(class="carousel-indicators")
        -files = files.slice(0, 5)
        each file, index in files
            - var first = index==0
            if first
                li(data-target="#img-carousel" data-slide-to="0" class="active")
            else
                li(data-target="#img-carousel" data-slide-to=index)
    each file, index in files
        - var first = index==0
        if first
            div(class="carousel-item active")
                img(src="/img/"+imgDir+"/"+file alt="placeholder")
                div(class="carousel-caption d-none d-md-block")
        else
            div(class="carousel-item")
                img(src="/img/"+imgDir+"/"+file alt="placeholder")
                div(class="carousel-caption d-none d-md-block")
    a(class="carousel-control-prev" href="#img-carousel" role="button" data-slide="prev")
        span(class="carousel-control-prev-icon" aria-hidden="true")
        span(class="sr-only") Previous
    a(class="carousel-control-next" href="#img-carousel" role="button" data-slide="next")
        span(class="carousel-control-next-icon" aria-hidden="true")
        span(class="sr-only") Next
a(class="link carousel-link" href=galleryLink) zur Galerie