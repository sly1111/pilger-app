div(id="img-carousel" class="carousel slide" data-ride="carousel")    
    ol(class="carousel-indicators")
        li(data-target="#img-carousel" data-slide-to="0" class="active")
        li(data-target="#img-carousel" data-slide-to="1")
        li(data-target="#img-carousel" data-slide-to="2")
    div(class="carousel-inner")
        div(class="carousel-item active")
            img(src="https://placeimg.com/1000/500/nature" alt="placeholder")
            div(class="carousel-caption d-none d-md-block")
