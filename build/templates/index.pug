doctype html
html(lang="en")
  include head
  body
    marquee(class="stickman-container" direction="right" scrollamount="3")
      img(class="stickman" src='/img/transparent.gif')
    div(class="countdown")
      a(href="/")
        img(class="pic" src='/img/muschel.svg')
      h2(id="countdown" class="counter")
    div(class="main-page")
      if page == "gallery"
        include gallery
      else if page == "home"
        include carousel
        include activities
  include footer
